{
  "name": "prompt-enhancement-tool",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=@repo/shared\" \"npm run dev --workspace=apps/api\" \"npm run dev --workspace=apps/web\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\"",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "concurrently": "^8.2.2"
  }
}

